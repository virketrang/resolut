{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true
	},
	"include": ["src"],
	"exclude": [
		"**/*.stories.tsx",
		"**/*.test.tsx",
		"**/*.test.ts",
		"./src/setupTests.ts"
	]
}
